{
    "components": {
        "schemas": {
            "UpdateTransactionRelationships": {
                "allOf": [
                    {
                        "type": "object",
                        "required": ["account"],
                        "additionalProperties": false
                    },
                    {
                        "$ref": "../relationships.json#/components/schemas/AccountRelationship"
                    }
                ]
            },
            "PatchTransactionTags": {
                "title": "Patch Transaction",
                "type": "object",
                "properties": {
                    "type": { "type": "string", "default": "transaction" },
                    "attributes": {
                        "type": "object",
                        "properties": {
                            "tags": {
                                "$ref": "../types.json#/components/schemas/Tags"
                            }
                        },
                        "additionalProperties": false,
                        "required": ["tags"]
                    }
                },
                "additionalProperties": false,
                "required": ["type", "attributes"]
            },
            "PatchBookTransaction": {
                "title": "Patch Book Transaction",
                "type": "object",
                "properties": {
                    "type": { "type": "string", "default": "bookTransaction" },
                    "attributes": {
                        "type": "object",
                        "properties": {
                            "tags": {
                                "$ref": "../types.json#/components/schemas/Tags"
                            },
                            "summary": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": false
                    },
                    "relationships": {
                        "$ref": "#/components/schemas/UpdateTransactionRelationships"
                    }
                },
                "additionalProperties": false,
                "required": ["type", "attributes"]
            },
            "PatchChargebackTransaction": {
                "title": "Patch Chargeback Transaction",
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "default": "chargebackTransaction"
                    },
                    "attributes": {
                        "type": "object",
                        "properties": {
                            "tags": {
                                "$ref": "../types.json#/components/schemas/Tags"
                            },
                            "summary": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": false
                    },
                    "relationships": {
                        "$ref": "#/components/schemas/UpdateTransactionRelationships"
                    }
                },
                "additionalProperties": false,
                "required": ["type", "attributes"]
            },

            "UpdateTransactionRequest": {
                "title": "Patch Transaction",
                "type": "object",
                "properties": {
                    "data": {
                        "oneOf": [
                            {
                                "$ref": "#/components/schemas/PatchTransactionTags"
                            },
                            {
                                "$ref": "#/components/schemas/PatchBookTransaction"
                            },
                            {
                                "$ref": "#/components/schemas/PatchChargebackTransaction"
                            }
                        ]
                    }
                },
                "additionalProperties": false,
                "required": ["data"]
            }
        }
    }
}
