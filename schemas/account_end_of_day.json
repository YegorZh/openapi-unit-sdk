{
    "components": {
        "schemas": {
            "identifier": {
                "type": "string",
                "pattern": "^[1-9]\\d*$"
            },
            "relationshipData": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "default": "customer"
                    },
                    "id": {
                        "$ref": "#/components/schemas/identifier"
                    }
                },
                "required": ["type", "id"],
                "additionalProperties": false
            },
            "relationship": {
                "type": "object",
                "properties": {
                    "data": {
                        "$ref": "#/components/schemas/relationshipData"
                    }
                },
                "required": ["data"],
                "additionalProperties": false
            },
            "attributes": {
                "type": "object",
                "properties": {
                    "date": {
                        "type": "string",
                        "format": "date"
                    },
                    "balance": {
                        "type": "integer"
                    },
                    "hold": {
                        "type": "integer"
                    },
                    "available": {
                        "type": "integer"
                    },
                    "overdraftLimit": {
                        "type": "integer"
                    }
                },
                "required": ["date", "balance", "hold", "available"],
                "additionalProperties": false
            },
            "accountEndOfDay": {
                "title": "Account End Of Day Resource",
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["accountEndOfDay"]
                    },
                    "id": {
                        "$ref": "#/components/schemas/identifier"
                    },
                    "attributes": {
                        "$ref": "#/components/schemas/attributes"
                    },
                    "relationships": {
                        "$ref": "#/components/schemas/relationship"
                    }
                },
                "additionalProperties": false,
                "required": ["type", "id", "relationships", "attributes"]
            }
        }
    }
}
