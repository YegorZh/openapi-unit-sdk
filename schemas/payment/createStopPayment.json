{
    "components": {
        "schemas": {
            "StopPayment": {
                "title": "Stop Payment",
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "default": "stopPayment"
                    },
                    "attributes": {
                        "type": "object",
                        "properties": {
                            "amount": {
                                "type": "integer",
                                "minimum": 1
                            },
                            "checkNumber": {
                                "type": "string",
                                "maxLength": 12
                            },
                            "tags": {
                                "$ref": "../types.json#/components/schemas/Tags"
                            },
                            "idempotencyKey": {
                                "type": "string",
                                "minLength": 1,
                                "maxLength": 255
                            }
                        },
                        "required": ["amount", "checkNumber"],
                        "additionalProperties": false
                    },
                    "relationships": {
                        "$ref": "./createPayment.json#/components/schemas/CreatePaymentRelationships"
                    }
                },
                "required": ["type", "attributes", "relationships"],
                "additionalProperties": false
            },
            "CreateStopPaymentRequest": {
                "type": "object",
                "properties": {
                    "data": {
                        "$ref": "#/components/schemas/StopPayment"
                    }
                },
                "additionalProperties": false,
                "required": ["data"]
            }
        }
    }
}
